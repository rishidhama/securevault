# SecureVault Sepolia Testnet Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/securevault

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# STRIPE BILLING (OPTIONAL)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PRICE_ID_PRO=price_your_stripe_price_id
STRIPE_BILLING_PORTAL_RETURN_URL=http://localhost:3000/settings

# =============================================================================
# ETHEREUM SEPOLIA TESTNET INTEGRATION
# =============================================================================

# Enable/disable Ethereum blockchain integration
ETHEREUM_ENABLED=true

# Sepolia testnet RPC endpoint (get from Alchemy, Infura, etc.)
# Alchemy: https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# Infura: https://sepolia.infura.io/v3/YOUR_PROJECT_ID
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Private key for the wallet that will deploy contracts and send transactions
# WARNING: Never commit this to version control!
# Generate a new wallet specifically for this purpose
WALLET_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Contract address (leave empty for auto-deployment, or set after deployment)
CONTRACT_ADDRESS=

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/securevault.log

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_MS=30000




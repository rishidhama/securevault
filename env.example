# SecureVault Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/securevault

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# STRIPE BILLING (OPTIONAL)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PRICE_ID_PRO=price_your_stripe_price_id
STRIPE_BILLING_PORTAL_RETURN_URL=http://localhost:3000/settings

# =============================================================================
# BLOCKCHAIN INTEGRITY ANCHORING
# =============================================================================

# Enable/disable blockchain anchoring (default: true)
BLOCKCHAIN_ANCHOR_ENABLED=true

# How many events to batch before anchoring (default: 1000)
BLOCKCHAIN_ANCHOR_INTERVAL=1000

# =============================================================================
# ON-CHAIN PUBLISHING (OPTIONAL - for public blockchain anchoring)
# =============================================================================

# Enable/disable on-chain publishing (default: false)
ONCHAIN_PUBLISH_ENABLED=false

# Ethereum RPC endpoint (use testnet for development)
# Sepolia testnet: https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# Mainnet: https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ONCHAIN_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Private key for the wallet that will publish transactions
# WARNING: Never commit this to version control!
# Generate a new wallet specifically for this purpose
ONCHAIN_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Contract address where audit events will be published
# Deploy AuditContract.sol first and put the address here
ONCHAIN_CONTRACT_ADDRESS=0xYOUR_CONTRACT_ADDRESS_HERE

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/securevault.log

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_MS=30000



